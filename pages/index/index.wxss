/**index.wxss**/
.change {
  color: #8995a1;
  font-size: 24rpx;
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
}
.change .icon-down {
  color: #888;
  font-size: 24rpx;
}

.input-area {
  position: relative;
}

.textarea-wrap {
  background-color: #fff;
  border-bottom: 1px solid #c7cee0;
}

.input-area textarea {
   background-color: #fff;
  padding: 30rpx 0 30rpx 30rpx;
  width: calc(100% - 48rpx);
  margin: 0;
  box-sizing: border-box;
}

.icon-close {
  position: absolute;
  z-index: 100;
  right:12rpx;
  top: 40rpx;
  color: #8995a1;
  font-size: 20rpx;
}

.input-area .text-area{
  min-height: 80px;
  background-color: #fff;
  padding: 40rpx;
}


.input-area .title {
   font-size: 28rpx;
  color: #8995a1;
}

.input-area .text-result {
  padding: 20rpx;
  padding-left: 0;
}